@model GGJWeb.Controllers.PostController.NewPostBody

@{
    ViewData["Title"] = "New";
    Layout = null;
}

<form asp-controller="Post" asp-action="New" method="post">
    <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" />
    </div>
    <div class="mb-3">
        <label asp-for="Subtitle"></label>
        <input asp-for="Subtitle" />
    </div>
    <div class="mb-3">
        <label asp-for="Body"></label>
        <textarea asp-for="Body"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Password"></label>
        <input asp-for="Password"/>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>